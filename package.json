{
  "name": "my-app",
  "version": "0.0.1",
  "description": "simple bootstrap for node",
  "main": "index.js",
  "engines": {
    "node": "5.9.0"
  },
  "scripts": {
    "lint": "eslint ./**/*.js || true",
    "lint:fix": "eslint ./**/*.js --fix",
    "start": "nodemon app.js",
    "pm2:start": "pm2 start -n myapp-backend app.js",
    "db": "node db/node_script",
    "test": "istanbul cover node_modules/mocha/bin/_mocha --require test/testhelper.js test/**/*.js",
    "test:noc": "mocha --require test/testhelper.js test/**/*.js",
    "test-no-coverage:watch": "npm run test-no-coverage -- --watch",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TeemuKoivisto/simple-node-bootstrap.git"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.15.0",
    "connect-busboy": "0.0.2",
    "cors": "^2.7.1",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "express-graphql": "^0.5.3",
    "graphql": "^0.6.2",
    "jwt-simple": "^0.5.0",
    "mongoose": "^4.5.9",
    "morgan": "^1.7.0",
    "node-fetch": "^1.6.0",
    "nodemon": "^1.9.1",
    "request": "^2.74.0",
    "request-promise": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "istanbul": "^0.4.3",
    "mocha": "2.4.5",
    "nock": "^8.0.0",
    "sinon": "^1.17.3",
    "supertest": "^1.2.0"
  }
}
